<p id="notice"><%= notice %></p>

<h1>My Food Diary</h1>

<table>
  <thead>
    <tr>
      <th width = "18%">Date and Time</th>
      <th width = "18%">Meal</th>
      <th width = "18%">Food Name</th>
      <th width = "18%">Amount (Serving Size)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diary_entries.each do |diary_entry| %>
      <tr>
        <td><%= diary_entry.time.to_formatted_s(:long) %></td>
        <td><%= diary_entry.meal %></td>
        <td><%= diary_entry.food %></td>
        <td><%= diary_entry.amount %></td>
        <td>
          <div class="btn-group btn-group-justified" >
            <%= link_to 'Show', diary_entry, :class => 'btn btn-default btn-xs' %>
            <%= link_to 'Edit', edit_diary_entry_path(diary_entry), :class => 'btn btn-default btn-xs' %>
            <%= link_to 'Delete', diary_entry, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-xs' %>
          </div>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="buttom btn-group btn-group-justified">
  <%= link_to 'Add New Entry', new_diary_entry_path, :class => 'btn btn-success active' %>
  <%= link_to 'Download', '', :class => 'btn btn-primary active' %>
</div>
