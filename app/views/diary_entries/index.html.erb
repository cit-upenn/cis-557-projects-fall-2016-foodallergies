<p id="notice"><%= notice %></p>

<h1>Food Diary</h1>

<table class="table table-responsive" width = "100%">
  <thead>
    <tr>
      <th>Food</th>
      <th>Amount (g)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diary_entries.each do |diary_entry| %>
      <tr>
      
        <td width = "20%"><%= diary_entry.food %></td>
        <td width = "20%"><%= diary_entry.amount %></td>
        <td width = "60%">
          <div class="btn-group btn-group-justified">
            <%= link_to 'Show', diary_entry, :class => 'btn btn-default btn-xs' %>
            <%= link_to 'Edit', edit_diary_entry_path(diary_entry), :class => 'btn btn-default btn-xs' %>
            <%= link_to 'Delete', diary_entry, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-xs' %>
          </div>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add new entry', new_diary_entry_path, :class => 'btn btn-success' %>