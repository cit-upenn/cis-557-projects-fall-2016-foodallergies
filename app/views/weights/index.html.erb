<p id="notice"><%= notice %></p>

<h1>Weight Tracker</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Date</th>
      <th>Weight (lbs)</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weights.each do |weight| %>
      <tr>
        <td><%= weight.date %></td>
        <td><%= weight.weight %></td>
        <td><%= link_to 'Show', weight, class: "btn btn-success btn" %></td>
        <td><%= link_to 'Edit', edit_weight_path(weight), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', weight, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Weight', new_weight_path, class: "btn btn-success btn-lg" %>
