<p id="notice"><%= notice %></p>

<h1>Weight Tracker</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th width = "36%">Date</th>
      <th width = "36%">Weight (lbs)</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weights.each do |weight| %>
      <tr>
        <td><%= weight.date %></td>
        <td><%= weight.weight %></td>
        <td>
          <div class="btn-group btn-group-justified" >
            <%= link_to 'Show', weight, :class => 'btn btn-success btn-xs active' %>
            <%= link_to 'Edit', edit_weight_path(weight), :class => 'btn btn-xs btn-warning active' %>
            <%= link_to 'Delete', weight, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger active' %>
          </div>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Weight', new_weight_path, class: "btn btn-primary active" %>
