<p id="notice"><%= notice %></p>

<h1>Food Database</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Food</th>
      <th>Product barcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.product_barcode %></td>
        <td><%= link_to 'Show', food, class: "btn btn-success btn" %></td>
        <td><%= link_to 'Edit', edit_food_path(food), class: "btn btn-warning"%></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add food', new_food_path, class: "btn btn-success btn-lg"%>
