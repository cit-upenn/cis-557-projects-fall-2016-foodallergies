<h1> Food Search Page </h1>
<h6> Please enter the food of interest to see its allergens </h6>
<%= form_tag foods_search_path, :method => 'get' do%>
  <%= text_field_tag :search, params[:search]%>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th> Allergen: </th>
    </tr>
  <thead>
  <tbody>
  <% if @result != nil %>
  <% @result.each do |x| %>
  <tr>
    <td>
    <%= x.name %>
    </td>
  </tr>
    <% end %>
  <% else %>
    <%= @message %>
  <% end %>
</tbody>
</table>
