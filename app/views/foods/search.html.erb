<h1> Food Search Page </h1>
<h4> Please enter the food of interest to see its allergens </h4>
<h6> Note: Only the first letter of the first word should be capitalized and the
     rest should be in lowercase.</h6>
<%= form_tag foods_search_path, :method => 'get' do%>
  <%= text_field_tag :search, params[:search]%>
  <%= submit_tag "Search" %>
<% end %>

<table>


<% if @result != nil %>
  <thead>
    <tr>
      <% if @result.size != 0 %>
        <% if @result.size > 1 %>
          <th> Allergens contained in this food that you are searching: </th>
        <% else %>
          <th> Allergen contained in this food that you are searching: </th>
        <% end %>
      <% end %>
    </tr>
  </thead>
  <tbody>
  <% @result.each do |x| %>
  <tr>
    <td>
    <%= x.name %>
    </td>
  </tr>
    <% end %>
  <% else %>
    <%= @message %>
  <% end %>
</tbody>
</table>

<table>
  <thead>
    <tr>
      <% if @user_allergen.size != 0 %>
        <% if @user_allergen.size > 1 %>
          <th style="color:blue;"> Allergens in this food that you are
             allergic to: </th>
        <% else %>
          <th style="color:blue;"> Allergen in this food that you are
           allergic to: </th>
        <% end %>
      <% end %>
    </tr>
  </thead>
  <tbody>
  <% @user_allergen.each do |x| %>
  <tr>
    <td style="color:red;">
    <%= x %>
    </td>
  </tr>
    <% end %>
</tbody>
</table>
