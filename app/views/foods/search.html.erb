<h1> Food Search Page </h1>
<h6> Please enter the food of interest to see its allergens </h6>
<%= form_tag foods_search_path, :method => 'get' do%>
  <%= text_field_tag :search, params[:search]%>
  <%= submit_tag "Search" %>
<% end %>

<table>


<% if @result != nil %>
  <thead>
    <tr>
      <% if @result.size != 0 %>
      <th> Allergen contained in the food that you are searching: </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
  <% @result.each do |x| %>
  <tr>
    <td>
    <%= x.name %>
    </td>
  </tr>
    <% end %>
  <% else %>
    <%= @message %>
  <% end %>
</tbody>
</table>

<table>
  <thead>
    <tr>
      <% if @user_allergen.size != 0 %>
      <th> Allergen in the food that you are allergic to: </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
  <% @user_allergen.each do |x| %>
  <tr>
    <td>
    <%= x %>
    </td>
  </tr>
    <% end %>
</tbody>
</table>
