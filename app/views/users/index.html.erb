<p id="notice"><%= notice %></p>

<h1>All Patients Info</h1>

<table class="table table-responsive">
  <thead>
    <tr align="center">
      <th width = "14.4%">Patient</th>
      <th width = "14.4%">email</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
            <button type="button" class="btn btn-xs btn-danger" data-toggle="popover" title="Popover title" data-content="And here's some amazing content. It's very engaging. Right?">Click to toggle popover
            </button>
        </td>
        <td>
            <%= link_to 'Diary Entry', diary_entries, :class => 'btn btn-primary active' %>
        </td> 

      </tr>
    <% end %>
  </tbody>
</table>
