<p id="notice"><%= notice %></p>

<div class="jumbotron">
<h2>Settings</h2>
</div>

<div class="jumbotron" id="settings">
Change your settings <%= @name %>!

<%= form_for(@user) do |f| %>

  <div class="field">
    <h4><%= f.label :allergens %></h4>
    <%= collection_check_boxes :user, :allergen_ids, Allergen.all, :id, :name do |b| %>
          <%= b.label {b.check_box + b.text} %>
          <br />
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>

